<div class="modal fade" id="editanounce" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Düzəliş Elan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="container">
                @using (Html.BeginForm("editanouncement", "admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Elan adı</label>
                                <input type="hidden" name="Id" id="Id"/>
                                <input type="text" class="form-control" id="AnounceName" name="AnounceName"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Elan tarixi</label>
                                <input type="date" class="form-control" id="AnounceDate" name="AnounceDate" />
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Elan məzmunu</label>
                                <textarea class="form-control" name="AnounceDescription" id="AnounceDescription"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Paylaş</label>
                                <select name="ShareWith" class="form-control" id="ShareWith">
                                    <option value="Everyone">Hər kəs</option>
                                    @foreach (var item in ViewBag.Users)
                                    {
                                        <option value="@item.Id">@item.Name @item.Surname</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary mb-3 float-right">Düzəliş</button>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>


