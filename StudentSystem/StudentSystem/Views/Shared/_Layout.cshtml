<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Chem-edu.az Abituriyentlərin Dərsə davamiyyətini, imtahan nəticələrini özündə cəmləşdirən bir sistemdir.">
    <meta name="author" content="Aykhan Hajiyev">

    <title>@ViewBag.Title</title>

    <!-- Custom fonts for this template-->
    <link href="~/AdminPanel/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="~/AdminPanel/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/AdminPanel/css/sb-admin.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/images/logo.png">
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>

<body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <img src="~/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        <a class="navbar-brand mr-1" href="/home/index"> Chem-edu.az</a>

        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <!--Dumb-->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">

            </div>
        </form>
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-fw"></i> @User.Identity.Name
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="/account/logout">Çıxış</a>
                </div>
            </li>
        </ul>
    </nav>
    <!-- Navbar -->

    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item @ViewBag.AttendanceActive">
                <a class="nav-link" href="/home/index">
                    <i class="fas fa-poll"></i>
                    <span>Davamiyyət</span>
                </a>
            </li>
            <li class="nav-item @ViewBag.AnouncementActive">
                <a class="nav-link" href="/home/anouncements">
                    <i class="fas fa-bullhorn"></i>
                    <span>
                        Elanlar
                        <span class="float-right badge-success badge countanounce">@ViewBag.CountAnouncements</span>
                    </span>
                </a>

            </li>
            <li class="nav-item @ViewBag.ResultsActive">
                <a class="nav-link" href="/home/exams">
                    <i class="fas fa-book"></i>
                    <span>İmtahan nəticələri</span>
                </a>
            </li>
            <li class="nav-item @ViewBag.ProgressActive">
                <a class="nav-link" href="/home/progress">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>İnkişaf</span>
                </a>
            </li>
            <li class="nav-item @ViewBag.SettingsActive">
                <a class="nav-link" href="/account/settings">
                    <i class="fas fa-user-cog"></i>
                    <span>Tənzimləmələr</span>
                </a>
            </li>
            @if (User.IsInRole("Teacher"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="/admin">
                        <i class="fas fa-user-circle"></i>
                        <span>Admin Panel</span>
                    </a>
                </li>
            }

        </ul>

        <div id="content-wrapper">

            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto">
                        <span>Əlaqə nömrəsi: <a href="tel:+994772717100">077-271-71-00</a></span><br />
                    </div>
                </div>

            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/AdminPanel/vendor/jquery/jquery.min.js"></script>
    <script src="~/AdminPanel/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/AdminPanel/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="~/AdminPanel/vendor/chart.js/Chart.min.js"></script>
    <script src="~/AdminPanel/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/AdminPanel/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/AdminPanel/js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/AdminPanel/js/demo/datatables-demo.js"></script>
    @if (ViewBag.ProgressActive == "active")
    {
        <script src="~/AdminPanel/js/demo/chart-area-demo.js"></script>
    }
</body>

</html>
