@model StudentSystem.Models.Group

@{
    ViewBag.Title = "Yarat";
    ViewBag.GroupsActive = "active";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
